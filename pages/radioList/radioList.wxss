.content{
  padding: 0 24rpx;
  padding-top: 30rpx;
}
.content-item{
  position: relative;
  display: flex;
  height: 284rpx;
  margin-bottom: 30rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  overflow: hidden;
}
.content-item .left{
  flex: 4;
  padding-left: 32rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.content-item .right{
  position: relative;
  flex: 3;
  height: 100%;
}
.content-item .right .bannerImg{
  display: block;
  width: 100%;
  height: 100%;
}
.content-item .left .title{
  padding-top: 30rpx;
  font-size: 32rpx;
  color: #333333;
  text-align:justify;
  text-justify:inter-ideograph;
  line-height: 40rpx;
  height: 84rpx;
}
.timeDetail-left .one{
  font-size: 24rpx;
  color: #7F0F0D;
}
.timeDetail-left .two{
  margin: 0 12rpx;
  font-size: 24rpx;
  color: #979797;
}
.timeDetail-left .three{
  font-size: 24rpx;
  color: #999999;
}
.timeDetail-right image{
  position: relative;
  top: 8rpx;
  width: 38rpx;
  height: 34rpx;
  display: block;
}
.timeDetail{
  display: flex;
}
.timeDetail .timeDetail-left{
  flex: 3;
}
.timeDetail .timeDetail-right{
  position: relative;
  flex:2;
  text-align: right;
}
.viewLabel{
  margin-top: 20rpx;
  overflow: auto;
}
.viewLabel-left{
  float: left;
  width: 128rpx;
  height: 60rpx;
  font-size: 26rpx;
  color: #7F0F0D;
  border: 1rpx solid #7F0F0D;
  text-align: center;
  line-height:60rpx;
  border-radius: 10rpx;
}
.viewLabel-right{
  position: relative;
  top: 30rpx;
  float: right;
  font-size: 24rpx;
  color: #999999;
}
.changeState {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.changeState image{
  width: 100%;
  height: 100%;
  display: block;
}
button::after{
  border:none;
}
button{
  position:absolute;
  border:none;
  padding:0;
  padding-left:0;
  padding-right:0;
  box-sizing:border-box;
  background:none;
  overflow:auto;
  border-radius:0;
  width:80rpx;
  height:60rpx;
  left:253rpx;
  top:114rpx;
}
button image{
  width:40rpx;
  height:40rpx;
  display:block;
  margin:auto;
  top:10rpx;
  position:relative;
}
button-hover {
  color:rgba(0, 0, 0, 0.6);
  background-color:white;
}
