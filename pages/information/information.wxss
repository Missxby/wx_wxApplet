.content{
  padding: 0 24rpx;
  padding-top: 30rpx;
  margin-top: 70rpx;
}
.content-item{
  
  height: 284rpx;
  margin-bottom: 30rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  overflow: hidden;
}
.content-item navigator{
  display: flex;
  height: 100%;
}
.content-item .left{
  flex: 4;
  padding-left: 32rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.content-item .right{
  position: relative;
  flex: 5;
  height: 100%;
}
.content-item .right .bannerImg{
  width: 100%;
  height: 100%;
}
.content-item .left .title{
  padding-top: 30rpx;
  font-size: 28rpx;
  color: #333333;
  /* text-align:justify; */
  /* text-justify:inter-ideograph; */
  line-height: 40rpx;
  height: 84rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.timeDetail-left .one{
  font-size: 24rpx;
  color: #7F0F0D;
}
.timeDetail-left .two{
  margin: 0 12rpx;
  font-size: 24rpx;
  color: #979797;
}
.timeDetail-left .three{
  font-size: 24rpx;
  color: #999999;
}
.timeDetail-right image{
  position: relative;
  top: 8rpx;
  width: 38rpx;
  height: 34rpx;
}
.timeDetail{
  display: flex;
}
.timeDetail .timeDetail-left{
  flex: 3;
}
.timeDetail .timeDetail-right{
  position: relative;
  flex:2;
  text-align: right;
}
.viewLabel{
  margin-top: 80rpx;
  overflow: auto;
  box-sizing: border-box;
}
.viewLabel-left{
  float: left;
  padding: 8rpx 12rpx;
  font-size: 26rpx;
  color: #7F0F0D;
  border: 1rpx solid #7F0F0D;
  text-align: center;
  border-radius: 10rpx;
  
}
.viewLabel-right{
  position: relative;
  top: 24rpx;
  float: right;
  font-size: 20rpx;
  color: #999999;
}
.changeState {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.changeState image{
  width: 100%;
  height: 100%;
}
