/**index.wxss**/

image {
  height: auto;
}
.banner{
  width: 100%;
  background: white;
}
.slide-image{
  display: block;
  width: 100% !important;
  height: 360rpx;
}
.list{
  padding: 24rpx 0;
  background: white;
}
.list-top{
   display: flex;
}
.list .item{
  flex: 1;
}
.list .item-content{
  width: 72rpx;
  margin: auto;
}
.list .item-content image{
  display: block;
  width: 100%;
  height: 72rpx;
}
.list .des{
  display: block;
  font-size: 28rpx;
  text-align: center;
  margin-top: 14rpx;
}
.list-bottom{
  display: flex;
  margin-top: 44rpx;
}
.video-box{
  width: 100%;
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  background: white;
  overflow: auto;
}
.video-box .item navigator:nth-child(odd){
  display: block;
  width: 50%;
  float: left;
  padding-left: 24rpx;
  padding-right: 12rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.video-box .item navigator:nth-child(even){
  display: block;
  width: 50%;
  float: left;
  padding-left: 12rpx;
  padding-right: 24rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.video-box image{
  display: block;
  width: 100%;
  height: 190rpx;
}
.item-title{
  position: relative;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: justify;
}
.item-title .one{
  display: block;
  height: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.item-title .two{
  display: block;
  margin-top: 16rpx;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #2EC57C;
  border: 2rpx solid #00B065;
  border-radius: 10rpx;
}
.item-title  .time{
  position: absolute;
  bottom: 0;
  right:0;
  font-size: 24rpx;
  color: #CCCCCC;
}
