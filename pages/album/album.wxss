/* pages/album/album.wxss */
.box{
  padding-top: 70rpx;
}
.kinds{
  border-bottom: 1rpx solid  #E0E0E0;
  text-align: left;
  padding: 0 24rpx;
}
.slide-image{
  display: block;
  height: 300rpx;
  width: 94%;
  margin: auto;
}
swiper{
  height: 470rpx;
}
.banner-title{
  padding: 36rpx 0;
  text-align: center;
  font-size: 34rpx;
  color: #333333;
}
.banner-title .middle{
  position: relative;
  display: inline-block;
  padding: 0 30rpx;
}
.banner-title .left-dian{
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background:  #7F0F0D;
  border-radius: 50%;
}
.banner-title .right-dian{
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background:  #7F0F0D;
  border-radius: 50%;
}
.picture-number{
  width: 94%;
  margin: auto;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #999999;
}
.content{
  margin-top: 20rpx;
  background: white;
}
.video-box{
  width: 100%;
  background: white;
  overflow: auto;
}
.video-box .item:nth-child(odd){
  position: relative;
  width: 50%;
  float: left;
  padding-left: 24rpx;
  padding-right: 12rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.video-box .item:nth-child(even){
  position: relative;
  width: 50%;
  float: left;
  padding-left: 12rpx;
  padding-right: 24rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.video-box .one-img{
  display: block;
  width: 100%;
  height: 242rpx;
}
.item-title{
   display: flex;
  overflow: auto;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: justify;
}
.item-title .one{
  flex: 1;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  color: #333333;
}
.item-title .two{
  flex: 1;
  font-size: 22rpx;
  color: #999999;
  text-align: right;
}