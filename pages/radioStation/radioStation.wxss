.box{
  padding-top: 50rpx;
}
.content .item{
  margin-top: 20rpx;
  padding: 24rpx;
  background: white;
}
.item image{
  width: 100%;
  height: 300rpx;
}
.item .title{
  margin-top: 30rpx;
  overflow: auto;
}
.item .title .left{
  float: left;
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
}
.item .title .right{
  position: relative;
  top: 8rpx;
  float: right;
  font-size: 26rpx;
  color: #666666;
}
.item .des{
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #666666;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}